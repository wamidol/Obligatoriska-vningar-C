#include <stdio.h>

int main()
{
    int choice;
    double exRate, prices ;

    printf("\nYour shopping assistant\n\n");
    printf("1. Set exchange rate in SEK (current rate: 1.00\n");
    printf("2. Read prices in the foreign currency\n");
    printf("3. End\n\n");
    printf("Give your choice (1 - 3): ");

    scanf("%d",&choice);

    switch (choice)
    {
        case 1:
            printf("\nGive exchange rate: ");
            scanf("%lf", &exRate);
        break;

        case 2:
            printf("\n Give price (finish with < 0): ");
            scanf("%lf", &prices);
        break;

        case 3:
            printf("End of program!\n");
        break;

        case 4:
        break;

        default:
            printf("Invalid choice\n");

    }

  return 0;
}
