#include <stdio.h>

void printInfo (void);
int readNumbJudges (void);


int main(void)
{

int numbJudge;
float arrayJudge[10];
int i;


  //Print out information of the program
printInfo ();

//Reads in number of judges, untill correct input number
numbJudge = readNumbJudges ();

printf("\n");

//Reads in score of each judge
for (i = 0; i < numbJudge;i = i + 1)
{
printf("Score from judge %d? ", i + 1);
scanf("%f", &arrayJudge[i]);
}

printf("\n");

printf("Loaded scores:\n");

return 0;

}

void printInfo ()
{
  printf("Program information\n"
  "The program reads in the number of judges and the score from each judge.\n"
  "Then it calculates the average score without regard to the lowest and\nhighest judge score."
  " Finally it prints the results (the highest, the\nlowest and the final average score).\n\n");
}

int readNumbJudges (void) 
{
  int numbJudge;
  
  do {
  printf("Number of judges (min 3 and max 10 judges)? ");
  scanf("%d", &numbJudge);

  } while (numbJudge < 3 || numbJudge > 10);
  return numbJudge;

}
